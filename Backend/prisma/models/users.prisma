model User {
    id                 String     @id @default(uuid())
    email              String     @unique
    password           String
    role               UserRole
    status             UserStatus @default(ACTIVE)
    needPasswordChange Boolean    @default(true)
    createdAt          DateTime   @default(now())
    updatedAt          DateTime   @updatedAt

    // In future, you can add other role tables
    host              Host?
    admin             Admin?
    payments          Payment[]
    reviews           Review[]
    eventParticipants EventParticipant[]
    profile           Profile?

    @@map("users")
}

model Host {
    id            String   @id @default(uuid())
    fullName      String
    profilePhoto  String?
    contactNumber String?
    bio           String?
    location      String?
    interests     String[]

    userId String @unique
    // user   User   @relation(fields: [userId], references: [id])
    user   User   @relation(fields: [userId], references: [id])

    events           Event[]
    reviews          Review[]
     paymentsReceived Payment[]
   

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("hosts")
}

model Admin {
    id            String  @id @default(uuid())
    fullName      String
    email         String  @unique
    profilePhoto  String?
    contactNumber String?
    isDeleted     Boolean @default(false)

    userId String @unique
    user   User   @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("admins")
}
